﻿@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" id="minDate" class="form-control minDate" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" id="maxDate" class="form-control maxDate" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary filter-button" id="filter-button">Submit</button>
                    </div>
                </div>   
                <hr />
                <div class="alert alert-dismissible alert-danger visually-hidden alert-data-filter" id="alert-data-filter">              
                    <strong>Invalid date!</strong> Modify values before filtering.
                </div>
            </fieldset>            
        </form>
    </div>
</div>

